@{
    ViewBag.Title = "ManageTeacher";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    var listScience = (List<Managing_Teacher_Work.Models.Science>)ViewBag.listScience;
    var session = (Managing_Teacher_Work.Common.UserLogin)Session[Managing_Teacher_Work.Common.CommonConstants.USER_SESSION];

}


<div class="row">
    <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
        <li role="presentation">
            <a href="/Home/" id="home-tab">Tin Tức - Sự Kiện</a>
        </li>
        <li role="presentation" class="active" id="bt">
            <a href="/Home-ManageTeacher/">Danh Sách Công Đoàn Viên</a>
        </li>
        <li role="presentation">
            <a href="/Home/ActivityList">Hoạt Động Công Đoàn</a>
        </li>
        <li role="presentation">
            <a href="/Home/TotalTransactionView">Thống Kê Chi Phí</a>
        </li>
        @if (session.GroupID == "ADMIN")
        {
            <li role="presentation">
                <a href="/Home/GetTotalTransactionByMonth">Thống Kê Chi Tiết Phí</a>
            </li>
        }

        <li role="presentation">
            <a href="/Extention/">Tiện ích</a>
        </li>
    </ul>
</div>

<div id="myTabContent" class="tab-content">
    <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Danh sách bộ môn</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <table id="datatable-buttons" class="table table-striped jambo_table bulk_action">
                            <thead>
                                <tr style="width:100%">
                                    <th style="width:20%">Bộ Môn</th>
                                    <th style="width:40%">Văn phòng</th>
                                    <th style="width:10%">Ngày thành lập</th>
                                    <th style="width:10%">Danh Sách Công Đoàn Viên</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in listScience)
                                {
                                    <tr>

                                        <td>@(item.Name ?? "")</td>
                                        <td>@(item.Address ?? "")</td>

                                        @if (item.Founding != null)
                                        {
                                            <td>
                                                @(item.Founding.Value.ToString("dd/MM/yyyy"))
                                            </td>
                                        }
                                        else
                                        {
                                            <td><p>Không có</p></td>
                                        }
                                        <td><a href="/listteacher/@item.ID" class="btn btn-info btn-xs">Danh Sách Công Đoàn Viên @item.Name</a></td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

