@{
    ViewBag.Title = "CalendarWorkingDetails";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    var activity = ViewBag.Activity;
}
<script>
    function cancel() {
        if ((document.referrer.toString().indexOf("/Home/") != -1) || document.referrer.toString().indexOf("/Calendar-Working-Detail-Level2/")) {
            window.location = "/Home/";
        }
    }
</script>


<div>
    <div class="body">
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                <div class="form-group">
                    <h2 style="text-transform: uppercase;">
                        <b></b>
                    </h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                <div class="form-group">
                    <h4><b>@activity.Title</b></h4>
                </div>
            </div>
        </div>
        <div class="table-custom">
            <table class="table" style="width: 100%">
                <tr>
                    <td style="width: 20%">Thời gian thực hiện</td>

                    <td style="width: 80%">Từ ngày @activity.StartDate.ToString("dd/MM/yyyy") đến @activity.EndDate.ToString("dd/MM/yyyy") </td>
                </tr>
                <tr>
                    <td style="width: 20%">Loại Hoạt Động</td>
                    <td style="width: 80%" @Managing_Teacher_Work.Helpers.EnumHelper.GetEnumDescription((Managing_Teacher_Work.Enums.ActivityTypeEnum)activity.ActivityType)</td>
                </tr>
                <tr>
                    <td style="width: 20%">Địa Điểm</td>
                    <td style="width: 80%">@activity.Address</td>
                </tr>
                <tr>
                    <td style="width: 20%">Trạng Thái</td>
                    <td style="width: 80%">@Managing_Teacher_Work.Helpers.EnumHelper.GetEnumDescription((Managing_Teacher_Work.Enums.ActivityStatus)activity.ActivityStatus)</td>
                </tr>
                <tr>
                    <td style="width: 20%">Nội dung công việc</td>
                    <td style="width: 80%">
                        @Html.Raw(activity.Description.Substring(0, 1200) + "...")
                    </td>
                </tr>


            </table>

        <br />
    </div>
    <br />
    <br />
    <div class="row" style="text-align: center;">
        <a class="btn btn-primary" href="/Calendar-Working-Detail-Level2/@activity.ID">Xem chi tiết</a>
        <button class="btn btn-search" style="background-color:orangered; color: white" onclick="cancel();">
            <span></span><i class="fa fa-undo"></i>&nbsp;Quay lại
        </button>
    </div>
</div>
</div>

