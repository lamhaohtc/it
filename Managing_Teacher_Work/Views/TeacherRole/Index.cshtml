@{

    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    var teacherList = ViewBag.teacherRoleList;

}
<style>
    .button-delete {
        color: white;
    }
</style>
@{
    var session = (Managing_Teacher_Work.Common.UserLogin)Session[Managing_Teacher_Work.Common.CommonConstants.USER_SESSION];

}
<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script>
    jQuery(document).ready(function () {
        if ($('#hdnSession').val() == 'MEMBER') {
            alert('Bạn không có quyền truy cập vào mục này!');
            window.location = "/Home/";
        }

    });
</script>
<div style="display:none;">
    <input type="hidden" id="hdnSession" value="@session.GroupID" />
</div>
<div class="row">
    <div>
        <label id="lblresult"></label>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Danh Sách Ban Chấp Hành<small></small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @*<div style="text-align:right">
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" onclick="Them()"><i class="fa fa-plus-square"></i>&nbsp;Thêm mới</button>
                </div>*@
                <div>
                    @if (TempData["AlertMessage"] != null)
                    {
                        <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert">
                            @TempData["AlertMessage"]
                        </div>
                    }
                </div>
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="display: none">Ma</th>
                            <th>Tên Cán Bộ</th>
                            <th>Chức Vụ</th>
                            <th>Gmail</th>
                            <th>Ngày Bắt Đầu</th>
                            <th>Ngày Kết Thúc</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (teacherList != null)
                        {
                            foreach (var item in teacherList)
                            {
                                <tr id="row_@item.ID">
                                    <td style="display: none">@item.ID</td>
                                    <td><a href="#!" onclick="Sua(this)" data-toggle="modal" data-target="#myModal">@(item.Name_Teacher ?? "")</a></td>
                                    <td>@item.Role.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.ModifiedDate</td>
                                    @if (session.GroupID == "ADMIN")
                                    {
                                        <td>
                                            @*<a href="#" class="btn btn-info btn-xs" onclick="Sua(this)" data-toggle="modal" data-target="#myModal"><i class="fa fa-edit" aria-hidden="true"></i> Sửa </a>*@
                                            <a userId="@item.ID" title="Delete" class="link-delete btn btn-danger btn-xs" onclick="return confirmation(this)"><i class="fa fa-trash"></i> Xóa</a>

                                        </td>
                                    }

                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@Html.Partial("_teacherRoleModel")

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script type="text/javascript">
    function Them() {
        SetNull();
        $("#bt_sua").hide();
        $("#bt_them").show();
    };

    function SetNull() {
        $("#Name").val('');
    };

    function Sua(el) {
        event.preventDefault();
        $("#bt_sua").show();
        $("#bt_them").hide();
        var id = el.parentNode.parentNode.cells[0].textContent;
        $.ajax({
            url: '/TeacherRole/getList/?id=' + id,
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                var json = JSON.parse(data);
                $("#ID").val(json.ID);
                $("#Name_Teacher").val(json.Name_Teacher);
                $("#Phone").val(json.Phone);
                $("#DateOfBirth").val(json.DateOfBirth);
                $("#Avatar").val(json.Avatar);
                $("#Address").val(json.Address);
                $("#Status").val(json.Status);
                $("#RoleId").val(json.RoleId);
                debugger;
            },
            error: function (err) {
                alert("Error: " + err.responseText);
            }
        });
    }

    function confirmation(el) {
        event.preventDefault();
        var id = el.parentNode.parentNode.cells[0].textContent;
        debugger;
        swal({
            title: "Bạn Có Chắc Chắn Muốn Xóa?",
            text: "Sau Khi Xóa, Bạn Sẽ Không Thể Khôi Phục Dữ Liệu Này",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: '/teacherRole/delete/' + id,
                        type: 'POST'
                    }),
                        swal({
                            title: "Thông Báo", text: "Xóa Thành Công !", type:
                                "success"
                        }).then(function () {
                            window.location.reload();

                        }
                        );
                } else {
                    swal("Bạn Vừa Hủy Thao Tác !");
                }
            });
    }

    function formatJSONDate(jsonDate) {
        var date = new Date(parseInt(jsonDate.substr(6)));
        return date;
    }
</script>

