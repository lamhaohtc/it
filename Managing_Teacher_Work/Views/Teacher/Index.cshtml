@{

    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    var listTeacher = ViewBag.listTeacher;

}
<style>
    .button-delete {
        color: white;
    }
</style>
@{
    var session = (Managing_Teacher_Work.Common.UserLogin)Session[Managing_Teacher_Work.Common.CommonConstants.USER_SESSION];

}
<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script>
    jQuery(document).ready(function () {
        if ($('#hdnSession').val() == 'MEMBER') {
            alert('Bạn không có quyền truy cập vào mục này!');
            window.location = "/Home/";
        }

    });
</script>
<div style="display:none;">
    <input type="hidden" id="hdnSession" value="@session.GroupID" />
</div>
<div class="row">
    <div>
        <label id="lblresult"></label>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Danh Sách Công Đoàn Viên<small></small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div style="text-align:right">
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" onclick="Them()"><i class="fa fa-plus-square"></i>&nbsp;Thêm mới</button>
                </div>
                <div>
                    @if (TempData["AlertMessage"] != null)
            {
                        <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert">
                            @TempData["AlertMessage"]
                        </div>
                    }
                </div>
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="display:none;">Mã</th>
                            <th>Tên Cán Bộ</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Ngày sinh</th>
                            <th>Giới tính</th>
                            <th>Email</th>
                            <th>Chức Vụ</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>


                    <tbody>
                        @if (listTeacher != null)
                        {

                            foreach (var item in listTeacher)
                            {


                                <tr id="row_@item.ID">
                                    <td style="display:none">@item.ID </td>
                                    <td><a href="#!" onclick="Sua(this)" data-toggle="modal" data-target="#myModal">@(item.Name_Teacher ?? "")</a></td>
                                    <td>@(item.Phone ?? "")</td>
                                    <td>@(item.Address != null ? item.Address : "")</td>
                                    @if (item.DateOfBirth != null)
                                    {
                                        <td>@item.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    <td>@(item.Gender != null ? (item.Gender == "Nam" ? "Nam" : "Nữ") : "")</td>
                                    <td>@item.Email</td>
                                    <td>@item.Role.Name</td>

                                    @if (session.GroupID == "ADMIN")
                                    {
                                <td>
                                    <a href="#" class="btn btn-info btn-xs" onclick="Sua(this)" data-toggle="modal" data-target="#myModal"><i class="fa fa-edit"></i> Sửa </a>
                                    <a userId="@item.ID" title="Delete" class="link-delete btn btn-danger btn-xs" onclick="return confirmation(this)"><i class="fa fa-trash"></i> Xóa</a>

                                </td>
                                    }


                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@Html.Partial("_TeacherModal")
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    function Them() {
        SetNull();
        $("#bt_sua").hide();
        $("#bt_them").show();
    };

    function SetNull() {
        $("#Name").val('');
    };

    function Sua(el) {
        event.preventDefault();
        $("#bt_sua").show();
        $("#bt_them").hide();
        var id = el.parentNode.parentNode.cells[0].textContent;
        $.ajax({
            url: '/Teacher/getList/?id=' + id,
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                var json = JSON.parse(data);
                $("#ID").val(json.ID);
                $("#Name_Teacher").val(json.Name_Teacher);
                $("#Phone").val(json.Phone);
                $("#Address").val(json.Address);
                $("#DateOfBirth").val(json.DateOfBirth);
                $("#NS").val(json.DateOfBirth);
                $("#Avatar").val(json.Avatar);
                $("#Gender").val(json.Gender);
                $("#Status").val(json.Status);
                $("#Email").val(json.Email);
                $("#SicenceID").val(json.SicenceID);
            },
            error: function (err) {
                alert("Error: " + err.responseText);
            }
        });
    }

    function confirmation(el) {
        event.preventDefault();
        var id = el.parentNode.parentNode.cells[0].textContent;
        debugger;
        swal({
            title: "Bạn Có Chắc Chắn Muốn Xóa?",
            text: "Sau Khi Xóa, Bạn Sẽ Không Thể Khôi Phục Dữ Liệu Này",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: '/teacher/delete/' + id,
                        type: 'POST'
                    }),
                        swal({
                            title: "Thông Báo", text: "Xóa Thành Công !", type:
                                "success"
                        }).then(function () {
                            window.location.reload();

                        }
                        );
                } else {
                    swal("Bạn Vừa Hủy Thao Tác !");
                }
            });
    }
</script>

